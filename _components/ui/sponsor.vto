---
css: |
    .sponsor {
        border: solid 1px var(--base-color);
        border-radius: 4px;
        width: 100%;
        height: 100px;

        img {
            width: 100%;
            height: 100%;
            object-fit: scale-down;
        }
    }

    @media only screen and (min-width: 768px) {
        .sponsor {
            width: 200px;
        }
    }
---
<a class="sponsor" role="button" href="{{ url }}">
    <img src="/imaxes/{{ image }}" alt="{{ name }}">
</a>
